{* Little magic here. Create iframe and then render message into it (needed because HTML messages) *}
{if $message->htmlBody !== NULL}
    {$message->htmlBody|noEscape}
{else}
    <!doctype html>
    <meta charset="utf-8">
    <style>
        html, body {
            margin: 0;
            padding: 5px;
            border: none;
            font-family: sans-serif;
            font-size: 12px;
            white-space: pre;
        }
    </style>
    <body>{$message|plainText}</body>
{/if}
